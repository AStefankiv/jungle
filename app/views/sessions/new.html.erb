<style>
  .centered {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 20vh;
  }
  .form-group {
    margin-bottom: 15px;
  }
</style>

<h1 class="centered">Login</h1>

<div class="centered">
<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag 'Login' %>
<% end %>
</div>